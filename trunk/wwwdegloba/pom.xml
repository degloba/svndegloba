    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- Setting this property using archetype-metadata.xml requiredPorperty
             so that generated project uses correct version of richfaces.
         -->
        <org.richfaces.bom.version>4.3.1.Final</org.richfaces.bom.version>
        <gae.version>1.7.6</gae.version>
        <hornetq.version>2.1.2.Final</hornetq.version>
