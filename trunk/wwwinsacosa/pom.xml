            <plugin>   
             
            	<artifactId>maven-antrun-plugin</artifactId>    
	            <executions>    
	                <execution>
            			<id>compile</id>
            			<phase>process-classes</phase>            			
            			<configuration>
            			<target>
	            			<echo message="Copying persistence.xml to            
	            				/target/wwwinsacosa/WEB-INF/classes/META-INF "  />      
	            			<copy file="${basedir}/src/main/webapp/WEB-INF/META-INF/persistence.xml"          
