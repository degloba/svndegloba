<?xml version="1.0" encoding="UTF-8"?> 

<!-- example of reference to a cfg.xml file --> 
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
 
 
 	<!-- BD SQLServer i proveidor persistencia Hibernate -->
	<persistence-unit name="persistenceServiceSQLServer" transaction-type="RESOURCE_LOCAL"> 
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider> 
	
		<properties> 
			<!--  <property name="hibernate.ejb.cfgfile" value="hibernate.cfg.xml"/>  -->
			
			<!-- aquesta property no esta en el hibernate.cfg.xml.Es exclusiva de JPA -->
			<!-- <property name="hibernate.archive.autodetection" value="class, hbm"/> -->
			<property name="hibernate.archive.autodetection" value="class"/>
			
			
			
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
			
			<!-- <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/> -->  
			 <property name="hibernate.connection.driver_class" value="net.sourceforge.jtds.jdbc.Driver"/>  
			
			<property name="hibernate.connection.password" value="tivoli00"/>
			
			<!-- <property name="hibernate.connection.url" value="jdbc:sqlserver://DESPATX;instanceName=SQLEXPRESS;databaseName=INSACO"/> --> 
			<property name="hibernate.connection.url" value="jdbc:jtds:sqlserver://DESPATX:1433/INSACO;instance=SQLEXPRESS"/> 
			
			
			<property name="hibernate.connection.username" value="degloba"/>
			<property name="hibernate.current_session_context_class" value="thread"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
			<property name="hibernate.search.autoregister_listeners" value="false"/>
			<property name="hibernate.show_sql" value="true"/>
		 
		</properties>
		
	</persistence-unit> 
	


	<!-- proves fetes contra BD HSQLDB i proveidor persistencia Hibernate -->	
	<persistence-unit name="persistenceServiceHSQLDB"
        transaction-type="RESOURCE_LOCAL">
        
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <class>HBM.Person</class>
        
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" /> 
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:richfaces_showcase" /> 
            <property name="javax.persistence.jdbc.user" value="sa" /> 
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="javax.persistence.validation.mode" value="NONE" />
            <property name="hibernate.validator.apply_to_ddl" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        </properties>
    </persistence-unit>
	
</persistence> 

